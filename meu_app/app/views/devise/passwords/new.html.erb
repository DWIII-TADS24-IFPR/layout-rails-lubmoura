<html class="h-full">
  <body class="h-full min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-100 via-purple-100 to-blue-100">
    <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md mx-auto">

      <h2 class="text-3xl font-bold text-center text-gray-700 mb-6">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-gray-600 font-medium mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-300 focus:border-transparent outline-none transition" %>
        </div>

        <div class="pt-4">
          <%= f.submit "Send me reset password instructions", class: "w-full py-2 px-4 rounded-lg bg-gradient-to-r from-pink-300 via-purple-300 to-blue-300 text-gray-800 font-semibold shadow-md hover:opacity-90 transition" %>
        </div>
      <% end %>

      <div class="text-center mt-6 text-gray-600 text-sm">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </body>
</html>
