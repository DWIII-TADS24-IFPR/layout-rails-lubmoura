<% content_for :title, "New post" %>

<html class="h-full">
  <body class="h-full min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-100 via-purple-100 to-blue-100">
    <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md mx-auto">
      
      <h2 class="text-3xl font-bold text-center text-gray-700 mb-6">New Post</h2>

      <%= render "form", post: @post %>

      <div class="pt-6 flex justify-center">
        <%= link_to "Back to posts", posts_path,
          class: "px-4 py-2 bg-gradient-to-r from-pink-300 via-purple-300 to-blue-300 text-white rounded-lg shadow-md hover:opacity-90 transition" %>
      </div>
    </div>
  </body>
</html>
